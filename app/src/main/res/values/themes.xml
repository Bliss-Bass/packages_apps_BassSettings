<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BassSettings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Disable Material You dynamic colors by overriding key color attributes -->
        <item name="android:windowBackground">@android:color/system_neutral1_100</item>
        <item name="colorSurface">@android:color/system_neutral1_100</item>
        <item name="colorOnSurface">@android:color/system_neutral1_900</item>
        
        <!-- Toolbar Color -->
        <item name="colorPrimary">@android:color/system_neutral1_100</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@android:color/system_neutral1_900</item>
        <item name="android:textColorSecondary">@android:color/system_neutral1_700</item>
    </style>

    <style name="Theme.BassSettings.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="Theme.BassSettings.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
